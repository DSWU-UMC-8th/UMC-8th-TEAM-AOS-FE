<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/mypagePosterIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/poster_sample" />

    <TextView
        android:id="@+id/mypageTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/mypagePosterIV"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mypageRatingBar"
        android:layout_width="108dp"
        android:layout_height="32dp"
        android:layout_marginTop="4dp"
        android:text="★★★★★"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/mypageTitleTV"
        app:layout_constraintTop_toBottomOf="@+id/mypageTitleTV" />

    <TextView
        android:id="@+id/mypageReviewTV"
        android:layout_width="254dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/mypageTitleTV"
        app:layout_constraintTop_toBottomOf="@+id/mypageRatingBar" />

</androidx.constraintlayout.widget.ConstraintLayout>