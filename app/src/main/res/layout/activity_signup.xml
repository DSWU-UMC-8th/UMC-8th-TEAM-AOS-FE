<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightPurple"
    tools:context=".SignupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="@color/midPurple"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/signupHamBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/hambtnimg" />

        <TextView
            android:id="@+id/signupTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입"
            android:layout_gravity="center"
            android:fontFamily="@font/galmuri7"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/signupIdTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:text="아이디"
        android:textSize="20dp"
        android:fontFamily="@font/galmuri7"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4" />

    <EditText
        android:id="@+id/signupIdET"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/loginet"
        android:ems="10"
        android:hint="아이디"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupIdTV" />

    <ImageView
        android:id="@+id/signupDupBtn"
        android:layout_width="110dp"
        android:layout_height="66dp"
        app:layout_constraintBottom_toBottomOf="@+id/signupIdET"
        app:layout_constraintEnd_toEndOf="@+id/signupIdET"
        app:layout_constraintTop_toTopOf="@+id/signupIdET"
        app:srcCompat="@drawable/dupcheckbtn" />

    <TextView
        android:id="@+id/signupPwTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="비밀번호"
        android:textSize="20dp"
        android:fontFamily="@font/galmuri7"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupIdET" />

    <EditText
        android:id="@+id/signupPwET"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/loginet"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupPwTV" />

    <EditText
        android:id="@+id/signupPwET2"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/loginet"
        android:ems="10"
        android:hint="비밀번호 확인"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupPwET" />

    <TextView
        android:id="@+id/signupEmailTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="이메일"
        android:textSize="20dp"
        android:fontFamily="@font/galmuri7"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupPwET2" />

    <EditText
        android:id="@+id/signupEmailET"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/loginet"
        android:ems="10"
        android:hint="이메일"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupEmailTV" />

    <TextView
        android:id="@+id/signupNickTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="닉네임"
        android:textSize="20dp"
        android:fontFamily="@font/galmuri7"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupEmailET" />

    <EditText
        android:id="@+id/signupNickET"
        android:layout_width="369dp"
        android:layout_height="69dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/loginet"
        android:ems="10"
        android:hint="ex) 팝콘먹는 자라"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signupNickTV" />

    <ImageView
        android:id="@+id/signupBtn"
        android:layout_width="0dp"
        android:layout_height="59dp"
        android:background="@drawable/shape_rect_btn"
        android:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/signupSignupBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/galmuri7"
        android:text="가입하기"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/signupBtn"
        app:layout_constraintEnd_toEndOf="@+id/signupBtn"
        app:layout_constraintStart_toStartOf="@+id/signupBtn"
        app:layout_constraintTop_toTopOf="@+id/signupBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>